{
	"name": "@havenlife/semotus",
	"description": "A subclass of supertype that synchronizes sets of objects.",
	"homepage": "https://github.com/haven-life/semotus",
	"version": "4.0.0",
	"main": "dist/index.js",
	"types": "dist/exports.d.ts",
	"peerDependencies": {
		"@havenlife/supertype": "3.3.*"
	},
	"devDependencies": {
		"@havenlife/supertype": "3.3.*",
		"@types/chai": "^3.4.34",
		"@types/mocha": "^2.2.39",
		"@types/node": "^7.0.65",
		"chai": "3.x",
		"eslint": "3.7.x",
		"mocha": "5.2.0",
		"nyc": "^15.0.0",
		"sinon": "1.15.x",
		"ts-mocha": "^6.0.0",
		"ts-node": "^6.1.0",
		"typescript": "3.5.2",
		"underscore": "^1.9.1"
	},
	"scripts": {
		"lint": "eslint .",
		"coverage:ts": "nyc npm run test:ts",
		"debugTSTests": "mocha --inspect-brk test/supertype/semotus.js",
		"debugJSTests": "mocha --inspect-brk test/*.js",
		"test:ts:compiled": "mocha test/supertype/semotus.js",
		"test:js": "mocha test/*.js",
		"test:ts": "ts-mocha -p ./src/tsconfig.json test/supertype/semotus.ts",
		"test": "mocha test/*.js test/supertype/semotus.js",
		"coverage": "nyc npm run test",
		"clean": "rm -rf ./dist",
		"compile": "npm run compileSrc && npm run compileTests",
		"copyStatics": "cp ./exports.d.ts ./dist/index.d.ts",
		"compileSrc": "tsc -p ./src/tsconfig.json",
		"compileTests": "tsc -p ./test/supertype/tsconfig.json",
		"build": "npm run compile && npm run copyStatics",
		"buildAndTest": "npm run build && npm run test:js && npm run test:ts:compiled"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/haven-life/semotus.git"
	},
	"bugs": {
		"url": "http://github.com/haven-life/semotus/issues"
	}
}
